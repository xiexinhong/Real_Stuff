<?xml version="1.0" encoding="utf-8"?>
<org.xxh.realstuff.widget.PullToZoomScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_head_img_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_top_beauty_girl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:actualImageScaleType="centerCrop"
                app:failureImage="@drawable/img_net_request_fail"
                app:failureImageScaleType="centerCrop"
                app:placeholderImage="@drawable/img_net_request_fail"
                app:placeholderImageScaleType="centerCrop"/>

        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_today_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</org.xxh.realstuff.widget.PullToZoomScrollView>

